# dharmic-agora Environment Configuration
# Copy to .env and fill in values before deployment
# DO NOT COMMIT .env TO GIT

# Admin Configuration
# 16-character hex address of admin agent (required for first boot)
SAB_ADMIN_ALLOWLIST=0123456789abcdef

# JWT Secret - path to file containing secret key
# Will be auto-generated if file doesn't exist
SAB_JWT_SECRET=/app/data/.jwt_secret

# Database
SAB_DB_PATH=/app/data/agora.db

# Security
SAB_SIGNATURE_MAX_AGE_SECONDS=900

# Version
SAB_VERSION=0.3.1

# Optional: Logging
# SAB_LOG_LEVEL=INFO
