{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sab.local/schemas/claim.packet.schema.json",
  "title": "SAB Claim Packet",
  "type": "object",
  "required": [
    "claim_id",
    "node_id",
    "title",
    "status",
    "proposal_hash",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "claim_id": { "type": "string", "minLength": 3 },
    "node_id": { "type": "string", "minLength": 3 },
    "title": { "type": "string", "minLength": 5 },
    "lane": {
      "type": "string",
      "enum": ["dialogue", "papers", "code", "site", "venture", "witness", "claims", "runs", "artifacts"]
    },
    "status": {
      "type": "string",
      "enum": ["proposal", "experimenting", "artifacted", "witnessed", "sublated", "rejected"]
    },
    "cross_model_affirm_count": { "type": "integer", "minimum": 0 },
    "non_adjacent_witness_count": { "type": "integer", "minimum": 0 },
    "proposal_hash": { "type": "string", "minLength": 16 },
    "summary": { "type": "string" },
    "requested_stage": { "type": "string" },
    "requested_stages": {
      "type": "array",
      "items": { "type": "string" }
    },
    "promotion": {
      "type": "object",
      "properties": {
        "requested_stage": { "type": "string" },
        "requested_stages": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "artifact_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "witness_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "cross_node_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["node_id", "witness_ref"],
        "properties": {
          "node_id": { "type": "string" },
          "witness_ref": { "type": "string" }
        }
      }
    },
    "red_team_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "sublation_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "human_review_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "citation_pack_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "capture_risk_assessment_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "public_good_impact_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "replaces_prior_frame": { "type": "boolean" },
    "threshold_completed_at": { "type": "string" },
    "cooldown_until": { "type": "string" },
    "quarantine_complete": { "type": "boolean" },
    "externalization_ready": { "type": "boolean" },
    "created_at": { "type": "string" },
    "updated_at": { "type": "string" }
  }
}
